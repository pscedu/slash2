# @bounce_host pscuxa.psc.edu

# @mkcfg DEFINES+=-DPSCLOG_LEVEL=PLL_INFO
# mkcfg DEBUG=0

# @client omnitopia-ib0:TMPDIR=/local/tmp:LNET_NETWORKS=sdp4(ib0)
# @client polybius-ib0:TMPDIR=/local/tmp:LNET_NETWORKS=sdp4(ib0)
# @client zebes-ib0:TMPDIR=/local/tmp:LNET_NETWORKS=sdp4(ib0)
